@page
@model ClinicalSkills.WebApp.Pages.IndexModel

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />
	<title>Clinical Skills</title>

	<!-- iOS meta -->
	<meta name="theme-color" content="#333" />
	<meta name="apple-mobile-web-app-capable" content="yes" />

	<!-- Style -->
	<environment names="Development">
		<link rel="stylesheet" href="~/css/bundles/1.0/clinical-skills-lib.css" />
		<link rel="stylesheet" href="~/css/bundles/1.0/clinical-skills.css" />
	</environment>
	<environment names="Staging,Production">
		<link rel="stylesheet" href="~/css/bundles/1.0/clinical-skills-lib.min.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/css/bundles/1.0/clinical-skills.min.css" asp-append-version="true" />
	</environment>

	<!-- Script -->
	<script type="text/javascript" csp-add-nonce="true">
		var readyF = [];
		var ready = (f) => readyF.push(f);
		var home = "@Url.Page("/Entries/Index", "Home")";
		var signIn = "@Url.Page("/Auth/SignIn")";
	</script>

</head>
<body class="d-flex flex-column h-100">

	<!-- Header -->
	<vc:header />

	<div class="container-fluid flex-shrink-0">

		<div class="row">

			<!-- Sidebar -->
			<vc:sidebar />

			<!-- Main Content -->
			<main role="main" class="col-12 col-md-9 col-xl-10 pt-2 px-md-4"></main>

		</div>

	</div>

	<!-- Footer -->
	<vc:footer />

	<!-- Script -->
	<environment names="Development">
		<script defer src="~/lib/font-awesome/js/all.js" data-auto-add-css="false"></script>
		<script defer src="~/js/bundles/clinical-skills-lib.js"></script>
		<script defer src="~/js/bundles/clinical-skills.js"></script>
	</environment>
	<environment names="Staging,Production">
		<script defer src="~/lib/font-awesome/js/all.min.js" data-auto-add-css="false" asp-append-version="true" csp-add-nonce="true"></script>
		<script defer src="~/js/bundles/clinical-skills-lib.min.js" asp-append-version="true" csp-add-nonce="true"></script>
		<script defer src="~/js/bundles/clinical-skills.min.js" asp-append-version="true" csp-add-nonce="true"></script>
	</environment>
	<script defer type="text/javascript" csp-add-nonce="true">
		readyF.forEach((f, _) => f());
	</script>

	<div id="create" class="fixed-bottom"></div>
	<div id="update" class="fixed-bottom"></div>
	<div id="delete" class="fixed-bottom"></div>

</body>
</html>
